<style>
  .nav {
    padding: 20px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  .logo {
    font-size: 24px;
    font-weight: 600;
    color: #0f0f0f; /* color(60) */
    text-decoration: none;
  }
  .nav-links {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  @media (max-width: 768px) {
    .nav-links {
      flex-direction: column;
      align-items: center;
    }
  }
