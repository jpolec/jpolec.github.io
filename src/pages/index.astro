---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const meta = {
  title: "Jakub Polec - Physicist & Technology Strategist",
  description: "Quantitative finance expert, AI infrastructure architect, and technology strategist. Founder of QuantJourney, delivering enterprise-grade solutions for hedge funds and financial institutions.",
  keywords: "quantitative finance, AI infrastructure, technology strategy, hedge funds, factor investing, portfolio optimization",
  ogImage: "/jpbg.jpeg",
  twitterHandle: "@jakubpolec",
  siteUrl: "https://jakubpolec.com"
};
---

<Layout title={meta.title}>
  <head>
    <meta name="description" content={meta.description} />
    <meta name="keywords" content={meta.keywords} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={meta.siteUrl} />
    <meta property="og:title" content={meta.title} />
    <meta property="og:description" content={meta.description} />
    <meta property="og:image" content={meta.ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={meta.siteUrl} />
    <meta property="twitter:title" content={meta.title} />
    <meta property="twitter:description" content={meta.description} />
    <meta property="twitter:image" content={meta.ogImage} />
    <meta property="twitter:creator" content={meta.twitterHandle} />

    <!-- Additional Meta -->
    <meta name="author" content="Jakub Polec" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={meta.siteUrl} />
  </head>

  <div class="white-section"></div>

  <main class="container">
    <section id="about" class="hero fade-in">
      <div class="hero-content">
        <h1 class="c-h1">Jakub Polec</h1>
        <p class="subtitle">Physicist | AI & Quant Infrastructure Architect | Entrepreneur | Global Technology Strategist</p>
        <div class="social-stats">
          <a href="https://linkedin.com/in/jakubpolec" target="_blank" class="social-link">25,000+ LinkedIn followers</a>
          <a href="https://twitter.com/jakubpolec" target="_blank" class="social-link">7,500+ on X/Twitter</a>
          <a href="https://quantjourney.substack.com" target="_blank" class="social-link">5,000+ Substack subscribers</a>
          <a href="https://medium.com/@jpolec_72972" target="_blank" class="social-link">1,500+ on Medium</a>
        </div>
      </div>
    </section>

    <div class="image-container fade-in">
      <img src="/jpbg.jpeg" alt="Background" class="background-image" />
      <div class="image-overlay">Wait… who's the other guy?</div>
    </div>

    <div class="social-links-container fade-in">
      <div class="social-links-row">
        <a href="https://quantjourney.thinkific.com/" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
          Trainings
          <span class="external-link-arrow">↗</span>
        </a>
        <a href="https://www.youtube.com/@QuantJourneywithCode" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon></svg>
          YouTube
          <span class="external-link-arrow">↗</span>
        </a>
        <a href="https://github.com/jpolec" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
          GitHub
          <span class="external-link-arrow">↗</span>
        </a>
        <a href="https://quantjourney.substack.com" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path><line x1="12" y1="6" x2="12" y2="18"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
          Substack
          <span class="external-link-arrow">↗</span>
        </a>
        <a href="https://quantjourney.dev" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>
          Wiki
          <span class="external-link-arrow">↗</span>
        </a>
        <a href="https://medium.com/@jpolec_72972" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M2.5 19.5l7.5-7.5 7.5 7.5"></path><path d="M2.5 4.5l7.5 7.5 7.5-7.5"></path></svg>
          Medium
          <span class="external-link-arrow">↗</span>
        </a>
      </div>
    </div>

    <section id="quant" class="section fade-in">
      <h2 class="c-h2">Quant Finance & AI Infrastructure</h2>
      <div class="content-block">
        <p class="section-text">QuantJourney was built to accelerate strategy discovery — from idea to backtest — using a flexible architecture for cross-sectional, multi-asset, and factor-based strategies.</p>
        <ul class="feature-list">
          <li>Supports deep AI-driven factor modeling, regime detection, and portfolio signal generation across thousands of assets — including equities, futures, crypto, and FX.</li>
          <li>Our proprietary Strategy Development Language (SDL) enables quants to define, validate, and optimize alphas using technical, fundamental, and macro signals — without rewriting pipelines for each new idea.</li>
          <li>Trusted by a few hundred clients globally, including hedge funds, family offices, and advanced quants managing $10M–$500M AUM.</li>
        </ul>
        <blockquote class="quote">
          "What others spend years building in fragmented stacks — we deliver in weeks, at scale, with elegance.<br>
          Clients often respond with just one word: 'Wow.'"
        </blockquote>
        <div class="stats">
          <div class="cta-container">
            <h3 class="cta-title">Join 5,000+ Quant Finance Investors</h3>
            <p class="cta-subtitle">Get weekly insights on quantitative finance, AI infrastructure, and strategy development</p>
            <a href="https://quantjourney.substack.com" class="cta-button">
              Subscribe to QuantJourney
              <span class="arrow">→</span>
            </a>
            <p class="cta-stats">Active community across US, EU, CH, UAE, and KSA</p>
          </div>
        </div>
      </div>
    </section>

    <section id="corporate" class="section fade-in">
      <h2 class="c-h2">Corporations, Science and Startups</h2>
      <div class="content-block">
        <p class="section-text">
          Worked for T-Mobile, Orange, Microsoft, Oracle EMEA in Europe and Middle-East.
        </p>
        <div class="company-logos">
          <img src="/tech/t-mobile.svg" alt="T-Mobile" class="company-logo" />
          <img src="/tech/orange.svg" alt="Orange" class="company-logo" />
          <img src="/tech/microsoft.svg" alt="Microsoft" class="company-logo" />
          <img src="/tech/oracle.svg" alt="Oracle" class="company-logo" />
        </div>
        <ul class="feature-list">
          <li>Founded 5 technology companies, with VC funding and successful exits — including one of the earliest AI startups in Central Europe, awarded Best Startup in CEE (2005).</li>
          <li>Delivered enterprise-grade solutions and digital architecture for:
            <ul class="sub-list">
              <li>Microsoft (MEA Innovation Lead)</li>
              <li>Oracle EMEA</li>
              <li>France Telecom / Orange, T-Mobile, and telcos across Europe</li>
              <li>Dubai Government, Ministry of ICT (Qatar), and major state-backed organizations in Saudi Arabia</li>
            </ul>
          </li>
          <li>Recipient of the Microsoft CEO Award for Best Marketing Campaign</li>
          <li>Led cross-functional global teams in high-stakes, fast-moving environments — always at the frontier of technology and innovation.</li>
          <li>Background in theoretical and applied physics, with early research work at CERN — where I developed the analytical mindset and systems discipline I now apply in finance and technology.</li>
          <li>I bring scientific precision to every layer of development — from model validation to infrastructure resilience — building systems that are explainable, testable, and robust under real-world volatility.</li>
        </ul>
      </div>
    </section>

    <section id="development" class="section fade-in">
      <h2 class="c-h2" style="margin-top: 30px;">Quant Development & Systems Engineering</h2>
      <div class="content-block">
        <p class="section-text">I don't just write code. I build infrastructure that rivals top quant firms.</p>
        <ul class="feature-list">
          <li>Architected QuantJourney with a multi-cloud, horizontally scalable architecture.</li>
          <li>Every client runs in a fully isolated environment — ensuring data security, compliance, and reproducibility — modeled after best practices at Tower Research and Two Sigma.</li>
          <li>Supports 100+ parallel backtests across 5,000+ assets, with async execution, smart scheduling, and full observability.</li>
          <li>Native support for multi-cloud deployments (Hetzner, AWS, GCP, Azure) and hybrid setups (on-prem + cloud) — enabling quant teams to scale flexibly.</li>
          <li>Designed to empower lean quant teams to operate at Citadel-scale — without Citadel-size engineering teams.</li>
        </ul>
        <blockquote class="quote">
          "Wow. This is world-class."
        </blockquote>
        <div class="tech-logos">
          <img src="/tech/oracle-corporation-logo.svg" alt="Oracle" class="tech-logo" />
          <img src="/tech/hetzner-1.svg" alt="Hetzner" class="tech-logo" />
          <img src="/tech/aws-2.svg" alt="AWS" class="tech-logo" />
          <img src="/tech/prometheus.svg" alt="Prometheus" class="tech-logo" />
          <img src="/tech/grafana.svg" alt="Grafana" class="tech-logo" />
          <img src="/tech/mongodb-icon-1.svg" alt="MongoDB" class="tech-logo" />
          <img src="/tech/kx-1.svg" alt="KX" class="tech-logo" />
          <img src="/tech/hashicorp.svg" alt="HashiCorp" class="tech-logo" />
          <img src="/tech/blloomberg.svg" alt="Bloomberg" class="tech-logo" style="transform: translateY(15%) scale(0.85);" />
          <img src="/tech/factset-2.svg" alt="FactSet" class="tech-logo" style="transform: translateY(15%) scale(0.75);" />
          <img src="/tech/docker-1.svg" alt="Docker" class="tech-logo" />
        </div>
      </div>
    </section>

    <section id="contact" class="section fade-in">
      <h2 class="c-h2" style="margin-top: 100px;">Contact Me</h2>
      <div class="content-block">
        <p class="section-text">Interested in scaling quant research, automating strategy testing, or exploring AI-powered infrastructure?</p>
        <div class="cta-buttons">
          <a href="https://confirmed-damselfly-18b.notion.site/1f4e438e327480d8bdaae056cb0a1c3b?pvs=105" target="_blank" class="btn-main">
            Get in Touch
            <span class="external-link-arrow">↗</span>
          </a>
        </div>
        <div class="contact-info">
          <p class="section-text">Let's discuss how we can transform your quantitative trading infrastructure and strategy development process.</p>
          <div class="contact-stats">
            <span>✓ Enterprise-grade solutions</span>
            <span>✓ Custom architecture</span>
            <span>✓ Dedicated support</span>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />

<style>
  :root {
    --primary-bg: #ffffff;
    --text-color: #1a2b4c;
    --text-secondary: #2c3e5d;
    --accent-color: #d32f2f;
    --border-color: #e0e0e0;
    --transition: all 0.3s ease;
  }

  [data-theme="dark"] {
    --primary-bg: #0a192f;
    --text-color: #e6f1ff;
    --text-secondary: #8892b0;
    --accent-color: #ef5350;
    --border-color: #1d2d50;
  }

  .container {
    max-width: 1020px;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--primary-bg);
  }

  .hero {
    text-align: center;
    padding: 6rem 0 4rem;
    background-color: var(--primary-bg);
    margin-top: 0;
  }

  .hero-content {
    max-width: 1020px;
    margin: 0 auto;
  }

  .c-h1 {
    font-size: 3.5rem;
    color: var(--text-color);
  }

  .subtitle {
    font-size: 1.3rem;
    color: var(--text-secondary);
    margin: 1rem 0;
  }

  .social-stats {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin: 1rem 0;
    color: var(--text-secondary);
    font-size: 1rem;
    flex-wrap: wrap;
  }

  .social-link {
    color: var(--text-secondary);
    text-decoration: none;
    position: relative;
    padding: 0.5rem 0;
    transition: var(--transition);
  }

  .social-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 50%;
    background-color: var(--accent-color);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .social-link:hover {
    color: var(--accent-color);
  }

  .social-link:hover::after {
    width: 100%;
  }

  .section {
    margin: 6rem 0;
    padding-top: 2rem;
    background-color: var(--primary-bg);
    position: relative;
    z-index: 1;
  }

  .c-h2 {
    font-size: 2.5rem;
    color: var(--text-color);
  }

  .content-block {
    padding: 2rem;
    margin-top: 1rem;
  }

  .section-text {
    font-size: 1.3rem;
    line-height: 1.7;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    max-width: 1020px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
    max-width: 1020px;
  }

  .feature-list li {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-color);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .sub-list {
    list-style: none;
    padding-left: 1.5rem;
    margin: 0.5rem 0;
  }

  .sub-list li {
    margin: 0.5rem 0;
    font-size: 1rem;
  }

  .feature-list li:before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--accent-color);
  }

  .quote {
    font-size: 1.2rem;
    font-style: italic;
    color: var(--text-color);
    border-left: 4px solid var(--accent-color);
    padding-left: 1.5rem;
    margin: 2rem 0;
    max-width: 1020px;
  }

  .stats {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .link-button {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background-color: var(--accent-color);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 1.1rem;
    font-weight: 500;
    transition: var(--transition);
  }

  .link-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(211, 47, 47, 0.2);
  }

  .stat-text {
    color: var(--text-secondary);
    font-size: 1rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .btn-main, .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 12px 25px;
    border-radius: 7px;
    text-decoration: none;
    transition: var(--transition);
  }

  .btn-main {
    background-color: var(--accent-color);
    color: white;
  }

  .btn-secondary {
    background-color: var(--primary-bg);
    color: var(--text-color);
    border: 1px solid var(--border-color);
  }

  .btn-main:hover, .btn-secondary:hover {
    transform: translateY(-2px);
  }

  .footer {
    background-color: var(--primary-bg);
    padding: 2rem;
    margin-top: 4rem;
    text-align: center;
  }

  .footer-content {
    max-width: 1020px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .copyright {
    font-size: 1.2rem;
    color: var(--text-color);
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-link {
    color: var(--text-color);
    text-decoration: none;
    transition: var(--transition);
    font-size: 1.2rem;
    position: relative;
    padding: 0.5rem 0;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 50%;
    background-color: var(--accent-color);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .footer-link:hover {
    color: var(--accent-color);
  }

  .footer-link:hover::after {
    width: 100%;
  }

  .footer-link .external-link-arrow {
    font-size: 0.8em;
    margin-left: 0.2rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 1rem;
    }
  }

  .image-container {
    position: relative;
    width: 100%;
    max-width: 640px;
    margin: 3.25rem auto;
    margin-top: -20px;
  }

  .background-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 20px;
    border: 1px solid var(--accent-color);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .image-overlay {
    position: absolute;
    bottom: 20%;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-size: 1.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    white-space: nowrap;
  }

  .white-section {
    position: relative;
    height: 100vh;
    background-color: var(--primary-bg);
    margin-top: -100vh;
    z-index: -1;
  }

  .company-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    margin: 3rem 0;
    flex-wrap: wrap;
    padding: 0 1rem;
  }

  .company-logo {
    height: 40px;
    width: auto;
    opacity: 0.9;
    transition: all 0.3s ease;
    filter: brightness(0) saturate(100%) invert(9%) sepia(100%) saturate(1000%) hue-rotate(210deg) brightness(90%) contrast(95%);
  }

  .company-logo:hover {
    opacity: 1;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    .hero {
      padding: 4rem 0 2rem;
    }

    .c-h1 {
      font-size: 2.5rem;
    }

    .c-h2 {
      font-size: 2rem;
      text-align: center;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .social-stats {
      gap: 1rem;
      font-size: 0.9rem;
    }

    .company-logos {
      gap: 2rem;
      margin: 2rem 0;
    }
    
    .company-logo {
      height: 30px;
    }

    .section {
      margin: 3rem 0;
    }

    .section-text {
      font-size: 1.1rem;
    }

    .content-block {
      padding: 1rem;
    }

    .feature-list li {
      font-size: 1rem;
      margin: 1rem 0;
    }

    .quote {
      font-size: 1.1rem;
      padding-left: 1rem;
    }

    .cta-container {
      padding: 1.5rem;
    }

    .cta-title {
      font-size: 1.5rem;
    }

    .cta-subtitle {
      font-size: 1rem;
    }

    .cta-button {
      padding: 0.8rem 1.5rem;
      font-size: 1rem;
    }

    .tech-logos {
      gap: 1.5rem;
      padding: 0 1rem;
    }
    
    .tech-logo {
      height: 30px;
    }

    .contact-stats {
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
      font-size: 1rem;
    }

    .social-links-row {
      gap: 1rem;
    }

    .social-link {
      font-size: 0.9rem;
    }

    .image-container {
      margin: 2rem auto;
    }

    .image-overlay {
      font-size: 1.5rem;
    }
  }

  @media (max-480px) {
    .c-h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .social-stats {
      flex-direction: column;
      align-items: center;
    }

    .company-logo {
      height: 25px;
    }

    .tech-logo {
      height: 25px;
    }

    .cta-title {
      font-size: 1.3rem;
    }

    .cta-subtitle {
      font-size: 0.9rem;
    }
  }

  .social-links-container {
    max-width: 1020px;
    margin: 0 auto;
    padding: 2rem;
    text-align: center;
    margin-top: -15px;
  }

  .social-links-row {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    margin: 1rem 0;
    flex-wrap: wrap;
